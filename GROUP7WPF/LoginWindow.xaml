<Window x:Class="GROUP7WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GROUP7WPF"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="750"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background-login.png" Stretch="Fill"/>
        </Grid.Background>
        <Border
            Background="White"
            CornerRadius="12"
            Padding="30"
            Width="320"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" Margin="375,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.25" />
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <!-- Tiêu đề -->
                <TextBlock Text="Welcome Back!"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#1E4E79"
                           Margin="0 0 0 10"
                           TextAlignment="Center"/>
                <TextBlock Text="Please login to continue"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0 0 0 20"
                           TextAlignment="Center"/>

                <!-- Email -->
                <TextBlock Text="Email"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1E4E79"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="txtEmail"
                         Height="32"
                         FontSize="14"
                         Background="#F8FBFF"
                         BorderBrush="#A7C8E7"
                         BorderThickness="1"
                         Padding="8,0"
                         Margin="0 0 0 15"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#1E4E79"
                           Margin="0 0 0 5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="32"
                             FontSize="14"
                             Background="#F8FBFF"
                             BorderBrush="#A7C8E7"
                             BorderThickness="1"
                             Padding="8,0"
                             Margin="0 0 0 25"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="Login"
                            Width="110"
                            Height="38"
                            Margin="5"
                            Click="Login_Click"
                            Background="#5DADEC"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="8"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Register"
                            Width="110"
                            Height="38"
                            Margin="5"
                            Click="Register_Click"
                            Background="White"
                            Foreground="#5DADEC"
                            BorderBrush="#5DADEC"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="8"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
