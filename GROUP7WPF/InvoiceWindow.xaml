<Window x:Class="GROUP7WPF.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="HÓA ĐƠN BÁN HÀNG" FontSize="18" 
                       FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Danh sách sản phẩm -->
            <ListView x:Name="lvInvoiceItems" Height="250">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sản phẩm" DisplayMemberBinding="{Binding Product.Name}" Width="120"/>
                        <GridViewColumn Header="SL" DisplayMemberBinding="{Binding Quantity}" Width="40"/>
                        <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding Product.Price}" Width="80"/>
                        <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding TotalPrice}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="{Binding TotalAmount}" FontSize="14" FontWeight="Bold"/>
                <TextBlock Text="{Binding CashReceived}" FontSize="14"/>
                <TextBlock Text="{Binding Change}" FontSize="14"/>
            </StackPanel>

            <Button Content="In / Xuất Bill" Width="120" Height="30" 
                    HorizontalAlignment="Center" Margin="0,10,0,0"
                    Click="Print_Click"/>
        </StackPanel>
    </Grid>
</Window>
