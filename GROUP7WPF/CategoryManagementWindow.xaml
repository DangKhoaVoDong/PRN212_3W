<Window x:Class="GROUP7WPF.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GROUP7WPF"
        mc:Ignorable="d"
        Title="Category Management"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">

    <Border Margin="20" Padding="20" CornerRadius="10" Background="White" BorderBrush="#cccccc" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Danh sách Category -->
            <ListView x:Name="lvCategories"
                      Grid.Row="0"
                      Margin="0 0 0 15"
                      SelectionMode="Single"
                      Background="#fafafa"
                      BorderBrush="#ddd"
                      BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Category Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Description" Width="400" DisplayMemberBinding="{Binding Description}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Button hành động -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Add"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="Add_Click" />
                <Button Content="Edit"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="Edit_Click" />
                <Button Content="Delete"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="Delete_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
