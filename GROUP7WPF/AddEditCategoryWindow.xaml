<Window x:Class="GROUP7WPF.AddEditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Category"
        Height="250"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5"
        FontFamily="Segoe UI"
        FontSize="14">
    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#ccc" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Name -->
            <TextBlock Text="Name:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtName"
                     Grid.Row="0"
                     Grid.Column="1"
                     Margin="5"
                     Padding="5"
                     Background="White"
                     BorderBrush="#aaa"
                     BorderThickness="1"/>

            <!-- Description -->
            <TextBlock Text="Description:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtDescription"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"
                     Padding="5"
                     Background="White"
                     BorderBrush="#aaa"
                     BorderThickness="1"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Save"
                        Width="90"
                        Margin="5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#4CAF50"
                        Click="Save_Click"/>
                <Button Content="Cancel"
                        Width="90"
                        Margin="5"
                        Background="#F44336"
                        Foreground="White"
                        BorderBrush="#F44336"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
